<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_list_detail_nav_graph"
    app:startDestination="@id/movieListFragment">

    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.learning.mvvmmovieapp.ui.popular_movie.MovieListFragment"
        android:label="Popular Movies"
        tools:layout="@layout/fragment_movie_list">
        <action
            android:id="@+id/movie_list_to_detail"
            app:destination="@id/movieDetailsFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />

    </fragment>
    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="com.learning.mvvmmovieapp.ui.single_movie_details.MovieDetailsFragment"
        android:label="Movie Detail"
        tools:layout="@layout/fragment_movie_details">
        <argument
            android:name="movie_id"
            android:defaultValue="0"
            app:argType="integer"
            app:nullable="false" />
    </fragment>
</navigation>